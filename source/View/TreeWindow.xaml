<Window x:Class="Sidecab.View.TreeWindow"
    x:Name = "treeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:lc="clr-namespace:Sidecab.View"
    mc:Ignorable="d"
    TextElement.FontWeight="Medium"
    TextElement.FontSize="14"
    FontFamily="{materialDesign:MaterialDesignFont}"
    WindowStyle="None" ShowInTaskbar="False"
    MinWidth="{Binding Settings.TreeMinWidth}" d:DesignHeight="450" d:DesignWidth="400"
    Closing="treeWindow_Closing" KeyDown="treeWindow_KeyDown" IsVisibleChanged="treeWindow_IsVisibleChanged" SizeChanged="treeWindow_SizeChanged">

    <Window.Resources>
        <Storyboard x:Key="ShowingAnim" RepeatBehavior="1x">

            <DoubleAnimation Storyboard.TargetName="treeWindow" Storyboard.TargetProperty="Width" Duration="0:0:0.2"
            From="{Binding Settings.TreeMinWidth}" To="{Binding Settings.TreeWidth}">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="3" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

        </Storyboard>
    </Window.Resources>

    <Grid>

        <lc:FileTree/>

    </Grid>

</Window>
